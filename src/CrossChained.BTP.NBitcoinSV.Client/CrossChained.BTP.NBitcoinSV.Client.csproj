<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.0.4</Version>
    <Authors>Vadim Malyshev</Authors>
    <Company>CrossChained</Company>
    <Product>CrossChained BTP</Product>
    <Description>API to form BSV transactions</Description>
    <Copyright>CrossChained</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/CrossChained/BTP</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CrossChained/BTP</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>BSV BitIndex</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NBitcoin" Version="4.2.7" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CrossChained.BTP.BitIndex.Client\CrossChained.BTP.BitIndex.Client.csproj" />
    <ProjectReference Include="..\CrossChained.BTP.NBitcoinSV\CrossChained.BTP.NBitcoinSV.csproj" />
  </ItemGroup>

</Project>
