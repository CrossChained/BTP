<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>CrossChained</Company>
    <Product>CrossChained BTP</Product>
    <Authors>Vadim Malyshev</Authors>
    <Copyright>CrossChained</Copyright>
    <Description>BitIndex API client library</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/CrossChained/BTP</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CrossChained/BTP</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>BSV Bitcoin</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.0.0" />
    <PackageReference Include="NBitcoin" Version="4.2.7" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

</Project>
